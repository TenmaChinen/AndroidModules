<resources>
    <!-- Base application theme. -->
    <style name="Theme.Application" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowFullscreen">true</item>
        <item name="fontFamily">@font/connection</item>
        <item name="android:fontFamily">@font/connection</item>

        <!--<item name="android:textViewStyle">@style/GlobalTextAppearance</item>
        <item name="android:buttonStyle">@style/GlobalTextAppearance</item>-->
    </style>
    
    <style name="GlobalTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingMultiplier">0</item>

        <item name="android:lineSpacingExtra">-40sp</item>
    </style>

</resources>